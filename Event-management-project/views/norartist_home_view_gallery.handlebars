<body>
    {{!-- <h1>Artist Home</h1>
    <h3>Welcome, {{display.user}} !!!</h3>
    {{#each display}}
    <p>{{this.badge1}}</p>
    <p>{{this.badge2}}</p>
    {{/each}} --}}
    {{!-- {{#each display}} --}}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand pl-4" href="#">Welcome {{this.username}}!</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse pl-5" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto pl-5">
          <li class="nav-item pl-2">
            <a class="nav-link" href="#">Bio </a>
          </li>
          <li class="nav-item pl-2">
            <a class="nav-link" href="/norartist_home_performance">Performance list</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/norartist_home_gallery">Gallery <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item pl-2">
            <a class="nav-link" href="/norartist_home_schedule">Schedule</a>
          </li>
          <li class="nav-item pl-2">
            <a class="nav-link" href="/norartist_home_training">Training</a>
          </li>
          <li class="nav-item pl-2">
            <a class="nav-link" href="/norartist_home_appointment">Appointment</a>
          </li>
          <li class="nav-item pl-2">
            <a class="nav-link" href="/norartist_home_reviews">Reviews</a>
          </li>
          <li class="nav-item pl-2">
            <a class="nav-link" href="/norartist_home_awards">Awards</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <a href='/logout' class="pl-3" style="color:white; font-size: 14px"><i>(Logout)</i></a>
            </form>
      </div>
    </nav>
      <br><br><br>
    <div class="container p-5" style="border: 1px solid rgb(218, 213, 213); border-radius: 5px;">
          <div class="row">
              {{#each display}}
              <div class="col-4">
                  <div class="card" style="width: 18rem;">
                    <img src="../public/img/{{this.image_name}}" class="card-img-top" alt="...">
                    <div class="card-body">
                      <p class="card-text">{{this.caption}}.</p>
                    </div>
                  </div>
              </div>
              {{/each}}
          </div>
    </div>
