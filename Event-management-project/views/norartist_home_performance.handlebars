  <div class="container p-4">
    <h3>Create Event</h3><br>
      <form method="POST" action="norartist_performance_insert">
        <div class="row">
          <div class="form-group col-6">
          EventName: <input type="text" name="event_name" class="form-control">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-6">
            Place: <input type="text" name="place" id="" class="form-control">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-6">       
          date: <input type="date" name="date" class="form-control">
          </div>
        </div>
        <div class="row">
        <div class="form-group col-6">       
          image: <input type="text" value="null" name="image" class="form-control">
        </div>
        </div>
          <div>
        <input type="submit" value="Submit" class="btn btn-outline-primary" class="col-6">
        </div>
      </form>
</div>
        <div class="container pt-5">
            <h3>List of Performances</h3><br>
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Event Name</th>
                        <th scope="col">Place</th>
                        <th scope="col">Date</th>
                        {{!-- <th scope="col">Status</th> --}}
                    </tr>
                </thead>
                <tbody>{{#each display}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.event_name}}</td>
                            <td>{{this.place}}</td>
                            <td>{{this.date}}</td>
                            {{!-- <td>{{this.status}}</td> --}}
                        </tr>{{/each}}
                </tbody>
            </table>
        </div>
    
</body>
