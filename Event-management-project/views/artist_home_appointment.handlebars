    <div class="container pt-5">
            <h3>Appointment Request</h3><br>
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Message</th>
                        <th scope="col">Reply</th>
                    </tr>
                </thead>
                <tbody>{{#each display}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.user_name}}</td>
                            <td>{{this.user_email}}</td>
                            <td>{{this.user_phone}}</td>
                            <td>{{this.user_date}}</td>
                            <td>{{this.user_time}} {{this.user_format}}</td>
                            <td>{{this.user_message}}</td>
                            <td>
                                <form method="POST" action="appointmentAccept">
                                    <input type="text" value={{this.id}} name="id" hidden>
                                    <input type="text" name="status" value="accept" id="" hidden>
                                    <a href=""><input type="submit" value="Accept" class="btn btn-link"></a><i class='far fa-check-circle'></i>
                                </form>
                                <form method="POST" action="appointmentReject">
                                    <input type="text" value={{this.id}} name="id" hidden>
                                    <input type="text" name="status" value="reject" id="" hidden>
                                    <input type="text" name="message" id="" class="form-control" placeholder="Message for Rejection">
                                    <a href=""><input type="submit" value="Reject" class="btn btn-link"></a><i class='far fa-times-circle'></i>
                                </form>
                            </td>
                        </tr>{{/each}}
                </tbody>
            </table>
        </div> 
        <div class="container pt-5">
          <a href="/artist_home_appointment_history"><i>Appointment History </i></a><i class='fas fa-glasses'></i>
        </div>
